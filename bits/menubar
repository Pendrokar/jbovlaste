 # kept in synch with it.
 my $base_url=$r->hostname()."/".$r->unparsed_uri();
 $base_url =~ s{//+}{/}g;
 $base_url =~ s{\?.*}{}g;
 $base_url = "http://".$base_url;

 my $path=($m->fetch_next)->path;

 $path =~ s/dhandler/\.\*/;

 $base_url =~ s/$path//;
 $base_url =~ s{/*$}{};
</%perl>


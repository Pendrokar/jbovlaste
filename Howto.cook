/*
 * Section: What to make
 *
 * The ``all'' targets are each of the commands.
 */

all: 
set forced;
{

/*
 * Update the autohandler with $version info
 */
    massage = [resolve massage.pl];

    autohandler = [basename [resolve autohandler.in]];

    ./[massage] [version] [autohandler].in autohandler;
    echo "Done.";
}

/*
 * $version updates
 */
%0autohandler: %0autohandler.in
{
    ./[massage] [version] %0autohandler.in %0autohandler;
}    

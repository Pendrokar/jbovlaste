   my $totval = 0;
   while (defined(my $voterow = $voteq->fetchrow_hashref)) 
   {
     $totval += $voterow->{'value'};
   }
   $defscores{$defrow->{'definitionid'}} = $totval;
   push @definitionsquery, $defrow;
 }


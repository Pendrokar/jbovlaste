   $mappingquery->execute($natlangword->{'wordid'});
   my %usedbyword;
   for(my $i=0; $i<$mappingquery->rows; $i++) {
      my $row = $mappingquery->fetchrow_hashref;
      push @{ $usedbyword{$row->{'word'}} }, $row;
   }
</%perl>

<dl>
% foreach my $word (keys %usedbyword) {
